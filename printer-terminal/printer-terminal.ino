/*
  Since CupId is READ_WRITE variable, onCupIdChange() is
  executed every time a new value is received from IoT Cloud.
*/
void onCupIdChange()  {

  digitalWrite(buzzer, HIGH);
  delay(500);
  digitalWrite(buzzer, LOW);
  
  //select message from file messages.h
  int countMessages = sizeof(messages) / sizeof(messages[0]);
  int randomizedPointer = 0;
 
  do {
        randomizedPointer = random(0, countMessages);
    } while (randomizedPointer == previous_pointer);

  previous_pointer = randomizedPointer;
  
  char *printerMessage = messages[randomizedPointer];
    
  //Serial.println(countMessages);
  //Serial.println(randomizedPointer);
  //Serial.println(messages[randomizedPointer]);
  //Serial.println(printerMessage);

  printer.wake();
  println(printerMessage);
  printer.feed(3);
  printer.sleep();

  message_count++;
  message_log = String(printerMessage + message_count);
  time_log = ArduinoCloud.getLocalTime();
}
